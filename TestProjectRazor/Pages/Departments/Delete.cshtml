@page "{id}"
@model Delete

@{
    ViewBag.Title = "Delete";
    bool existsEmployees = (bool)ViewData["existsEmployees"];
}

<div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
    <div class="row justify-content-center m-3">
        <div class="col col-lg-8">
            <strong>Are you sure that you want to delete department?</strong>
        </div>
    </div>
</div>

<form method="post" class="mt-3" enctype="multipart/form-data">
    <input asp-route-id="@Model.Department!.DepartmentId" type="hidden">
    <div class="row justify-content-center m-3">
        <div class="col col-lg-8">
            <div class="card cardBoxShadow">
                <div class="card-header cardHeaderStyle text-center">
                    <h1>@Model.Department.Name</h1>
                </div>
                <div class="card-body cardBoxShadow ">
                    <div class="row">
                        <div class="col col-lg-9">
                            <label class="cardTextLeftFloating labelBg" for="detailsId">ID:</label>
                            <h4 class="cardTextLeftFloating" id="detailsId">@Model.Department.DepartmentId</h4>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: rgba(0,0,0,.25)">
                            @if (existsEmployees)
                            {
                                <div class="alert alert-warning alert-dismissible fade show" style="margin-top: 20px" role="alert">
                                    <strong>Warning!</strong>
                                    <br>
                                    There are employees in this department. If you delete this department then you will delete all employees in this department.
                                    <button type="button" class="close btn btn-primary" id="closeBtn" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }
                            <button type="submit" class="btn m-1 btnDelete">Delete</button>
                            <a class="btn m-1 btnView" asp-page="/Departments/index">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>